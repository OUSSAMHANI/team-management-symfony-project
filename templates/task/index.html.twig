{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <!-- Page Header with buttons on the same line -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-dark">Tasks</h1>
            <div class="d-flex gap-2">
                <a href="{{ path('task_new') }}" class="btn btn-success btn-hover-effect rounded-pill">
                    <i class="fas fa-plus"></i> Create New Task
                </a>
                <a href="{{ path('app_dashboard') }}" class="btn btn-secondary btn-hover-effect rounded-pill">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Filter by Project, Status -->
        <form method="get" action="{{ path('task_index') }}" class="mb-4">
            <div class="row">
                <!-- Project Filter -->
                <div class="col-md-4">
                    <label for="projectFilter" class="form-label fw-bold">Filter by Project:</label>
                    <select id="projectFilter" name="project" class="form-select shadow-sm rounded-pill form-hover-effect" onchange="this.form.submit()">
                        <option value="">-- All Projects --</option>
                        {% for project in projects %}
                            <option value="{{ project.id }}" {{ selectedProject == project.id ? 'selected' : '' }}>{{ project.name }}</option>
                        {% endfor %}
                    </select>
                </div>

              <div class="col-md-4">
    <label for="statusFilter" class="form-label fw-bold">Filter by Status:</label>
    <select id="statusFilter" name="status" class="form-select shadow-sm rounded-pill form-hover-effect" onchange="this.form.submit()">
        <option value="">-- All Statuses --</option>
        <option value="Pending" {{ selectedStatus == 'Pending' ? 'selected' : '' }}>Pending</option>
        <option value="In Progress" {{ selectedStatus == 'In Progress' ? 'selected' : '' }}>In Progress</option>
        <option value="Done" {{ selectedStatus == 'Done' ? 'selected' : '' }}>Done</option>
    </select>
</div>

                <!-- Other Filters (optional) -->
                <div class="col-md-4">
                    <!-- Add any other filters here if necessary -->
                </div>
            </div>
        </form>

        <!-- Tasks Table -->
        <table class="table table-bordered table-hover mt-4 shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Project</th>
                    <th>Task Name</th>
                    <th>Assigned To</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr class="table-row">
                        <td>{{ task.project.name }}</td>
                        <td>{{ task.name }}</td>
                        <td>{{ task.assignedTo ? task.assignedTo.name : 'Not Assigned' }}</td>
                        <td>{{ task.status }}</td>
                        <td class="d-flex gap-2">
                            <a href="{{ path('task_show', {'id': task.id}) }}" class="btn btn-info btn-sm btn-hover-effect rounded-pill">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-warning btn-sm btn-hover-effect rounded-pill">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button class="btn btn-danger btn-sm btn-hover-effect rounded-pill" data-bs-toggle="modal" data-bs-target="#deleteModal{{ task.id }}">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            No tasks found. <a href="{{ path('task_new') }}">Create a new task</a>.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Custom Modal for Delete Confirmation -->
    {% for task in tasks %}
    <div class="modal fade" id="deleteModal{{ task.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ task.id }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel{{ task.id }}">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the task "<strong>{{ task.name }}</strong>"? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="{{ path('task_delete', {'id': task.id}) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Hover Animation for Table Rows */
        .table-row {
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .table-row:hover {
            background-color: #f0f8ff; /* Light blue hover color */
            transform: scale(1.02);
        }

        /* Button Styles */
        .btn-success i, .btn-info i, .btn-warning i, .btn-danger i {
            margin-right: 5px;
        }

        /* Header Text */
        h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        /* Modal Styles */
        .modal-content {
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        .modal-header {
            background-color: #f5c6cb;
            color: #721c24;
        }

        .modal-body {
            font-size: 16px;
            color: #721c24;
        }

        .modal-footer .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .modal-footer .btn-danger:hover {
            background-color: #c82333;
        }

        .modal-footer .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
        }

        .modal-footer .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}
