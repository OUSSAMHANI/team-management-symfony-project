{% extends 'base.html.twig' %}

{% block title %}Task Details{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <div class="card shadow-lg p-4 rounded-lg">
            <h2 class="text-center mb-4" style="color: #007bff; font-weight: bold; font-size: 2rem;">{{ task.name }}</h2>

            <!-- Display the Project Name -->
            <div class="mb-3">
                <strong>Project:</strong> 
                <span class="text-dark">{{ task.project ? task.project.name : 'No Project Assigned' }}</span>
            </div>

            <!-- Display the Team Name -->
            <div class="mb-3">
                <strong>Team:</strong> 
                <span class="text-dark">{{ task.assignedTo ? task.assignedTo.team.name : 'No Team Assigned' }}</span>
            </div>

            <div class="mb-3">
                <strong>Description:</strong>
                <p class="text-dark">{{ task.description }}</p>
            </div>

            <div class="mb-3">
                <strong>Assigned To:</strong>
                <span class="text-dark">{{ task.assignedTo ? task.assignedTo.name : 'Not Assigned' }}</span>
            </div>

            <div class="mb-3">
                <strong>Status:</strong>
                <span class="badge 
                    {% if task.status == 'Done' %}badge-success{% elseif task.status == 'In Progress' %}badge-warning{% else %}badge-secondary{% endif %}">
                    {{ task.status|capitalize }}
                </span>
            </div>

            <!-- Back to List Button -->
            <div class="mt-3 text-center">
                <a href="{{ path('task_index') }}" class="btn btn-dark btn-hover-effect">
                    <i class="fas fa-arrow-left"></i> Back to Task List
                </a>
            </div>
        </div>
    </div>

    <style>
        .card {
            margin: auto;
            border-radius: 0.75rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            background-color: #f8f9fa;
        }

        .btn-hover-effect:hover {
            transform: scale(1.05);
            transition: all 0.3s ease;
            background-color: #343a40; /* Darker background on hover */
        }

        h2 {
            color: #007bff;
            font-weight: bold;
        }

        .badge {
            font-size: 0.9rem;
            padding: 0.5rem;
        }

        .mb-3 {
            margin-bottom: 1.5rem;
        }

        .text-dark {
            font-size: 1rem;
            color: #343a40; /* Dark text color */
        }

        .text-center {
            text-align: center;
        }

        .btn-dark {
            background-color: #343a40;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 0.25rem;
        }

        .btn-dark:hover {
            background-color: #23272b;
            transform: scale(1.05);
        }

        .badge-success {
            background-color: #28a745;
        }

        .badge-warning {
            background-color: #ffc107;
        }

        .badge-secondary {
            background-color: #6c757d;
        }
    </style>
{% endblock %}
