{% extends 'base.html.twig' %}

{% block title %}Team Details{% endblock %}

{% block body %}
    <div class="container pt-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4 text-primary">Team Details</h2>
            
            <div class="mb-4">
                <h4 class="text-muted">Name:</h4>
                <p>{{ team.name }}</p>
            </div>

            <div class="mb-4">
                <h4 class="text-muted">Description:</h4>
                <p>{{ team.description }}</p>
            </div>

            <!-- Team Members Section -->
            <div class="mt-4">
                <h4 class="text-muted">Team Members:</h4>
                <ul class="list-unstyled">
                    {% for member in members %}
                        <li class="d-flex justify-content-between align-items-center mb-3">
                            <span>{{ member.name }} ({{ member.role }})</span>
                            <a href="{{ path('team_member_show', {'id': member.id}) }}" class="btn btn-info btn-sm" style="width: 140px; text-align: center;">
                                <i class="fas fa-eye"></i> View Member
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <!-- Projects Section -->
            {% if projects is not empty %}
                <div class="mt-4">
                    <h4 class="text-muted">Projects:</h4>
                    <ul class="list-unstyled">
                        {% for project in projects %}
                            <li class="d-flex justify-content-between align-items-center mb-3">
                                <span>{{ project.name }}</span>
                                <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-info btn-sm" style="width: 140px; text-align: center;">
                                    <i class="fas fa-eye"></i> View Project
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% else %}
                <p>No projects assigned to this team.</p>
            {% endif %}

            <!-- Back to Team List Button -->
            <div class="text-center mt-4">
                <a href="{{ path('team_list') }}" class="btn btn-secondary btn-hover-effect">
                    <i class="fas fa-arrow-left"></i> Back to Team List
                </a>
            </div>
        </div>
    </div>

    <style>
        .card {
            margin: auto;
            border-radius: 0.75rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(10px); /* Moves the card down a bit */
        }

        .btn-hover-effect:hover {
            transform: scale(1.05);
            transition: all 0.3s ease;
        }

        h2 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #007bff; /* Lighter blue color for the title */
        }

        h4 {
            color: #6c757d; /* Muted gray for the sub-headings */
        }

        .btn-info {
            transition: all 0.3s ease;
        }

        .btn-info:hover {
            transform: scale(1.1);
            background-color: #0056b3;
            border-color: #004085;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .list-unstyled {
            padding-left: 0;
        }

        .btn-info i {
            margin-right: 5px;
        }
    </style>
{% endblock %}
