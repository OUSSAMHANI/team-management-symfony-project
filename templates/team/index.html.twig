{% extends 'base.html.twig' %}

{% block title %}Teams{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <!-- Page Header with buttons on the same line -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-dark">Teams</h1>
            <div class="d-flex gap-2">
                <a href="{{ path('team_new') }}" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New Team
                </a>
                <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Teams Table -->
        <table class="table table-bordered table-hover mt-4 shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Team Name</th>
                    <th>Description</th>
                    <th>Assigned Projects</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    <tr class="table-row">
                        <td>{{ team.id }}</td>
                        <td>{{ team.name }}</td>
                        <td>{{ team.description }}</td>
                        <td>
                            {% if team.projects|length > 0 %}
                                {% for project in team.projects %}
                                    <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-outline-primary btn-sm mb-1">
                                        {{ project.name }}
                                    </a>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">No projects assigned</span>
                            {% endif %}
                        </td>
                        <td class="d-flex gap-2">
                            <a href="{{ path('team_show', {'id': team.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="{{ path('team_edit', {'id': team.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ team.id }}">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            No teams found. <a href="{{ path('team_new') }}">Create a new team</a>.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Custom Modal for Delete Confirmation -->
    {% for team in teams %}
    <div class="modal fade" id="deleteModal{{ team.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ team.id }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel{{ team.id }}">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the team "<strong>{{ team.name }}</strong>"? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="{{ path('team_delete', {'id': team.id}) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Hover Animation for Table Rows */
        .table-row {
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .table-row:hover {
            background-color: #f0f8ff; /* Light blue hover color */
            transform: scale(1.02);
        }

        /* Button Styles */
        .btn-outline-primary {
            border-color: #007bff;
            color: #007bff;
            text-decoration: none;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

        .btn-success i, .btn-info i, .btn-warning i, .btn-danger i {
            margin-right: 5px;
        }

        /* Header Text */
        h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        /* Modal Styles */
        .modal-content {
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        .modal-header {
            background-color: #f5c6cb;
            color: #721c24;
        }

        .modal-body {
            font-size: 16px;
            color: #721c24;
        }

        .modal-footer .btn-danger {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .modal-footer .btn-danger:hover {
            background-color: #c82333;
        }

        .modal-footer .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
        }

        .modal-footer .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}
