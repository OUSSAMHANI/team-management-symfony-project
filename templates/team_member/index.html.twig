{% extends 'base.html.twig' %}

{% block title %}Team Members{% endblock %}

{% block body %}
<div class="container mt-5 pt-5">
    <!-- Page Header with buttons on the same line -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-dark">Team Members</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('team_member_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Member
            </a>
            <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Filter Dropdown -->
    <div class="mb-4">
        <form method="get" action="{{ path('team_member_list') }}" id="filterForm">
            <label for="teamFilter" class="form-label">Filter by Team:</label>
            <div class="d-flex align-items-center">
                <select id="teamFilter" name="team" class="form-select" onchange="this.form.submit()">
                    <option value="">-- All Teams --</option>
                    {% for team in teams %}
                        <option value="{{ team.name }}" {{ selectedTeam == team.name ? 'selected' : '' }}>
                            {{ team.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </form>
    </div>

    <!-- Team Members Table -->
    <table class="table table-bordered table-hover mt-4 shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Team</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                <tr class="table-row">
                    <td>{{ member.name }}</td>
                    <td>{{ member.role }}</td>
                    <td>{{ member.team.name }}</td>
                    <td class="d-flex gap-2">
                        <a href="{{ path('team_member_show', {'id': member.id}) }}" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <a href="{{ path('team_member_edit', {'id': member.id}) }}" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ member.id }}">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        No team members found. <a href="{{ path('team_member_new') }}">Add a new member</a>.
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<!-- Custom Modal for Delete Confirmation -->
{% for member in members %}
<div class="modal fade" id="deleteModal{{ member.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ member.id }}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel{{ member.id }}">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the member "<strong>{{ member.name }}</strong>"? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="{{ path('team_member_delete', {'id': member.id}) }}" method="post" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ member.id) }}">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endfor %}

{% endblock %}
