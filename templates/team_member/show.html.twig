{% extends 'base.html.twig' %}

{% block title %}Team Member Details{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4" style="color: #007bff;">{{ teamMember.name }}'s Details</h2>

            <!-- Team Member Info -->
            <div class="row mb-3">
                <div class="col-md-8">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Name:</strong> {{ teamMember.name }}</li>
                        <li class="list-group-item"><strong>Role:</strong> {{ teamMember.role }}</li>
                        <li class="list-group-item"><strong>Team:</strong> {{ teamMember.team.name }}</li>
                    </ul>
                </div>
            </div>

            <!-- Assigned Tasks Section -->
            <h3 class="mt-4 mb-3" style="color: #28a745;">Assigned Tasks</h3>
            {% if assignedTasks is empty %}
                <p>No tasks assigned</p>
            {% else %}
                <ul class="list-group">
                    {% for task in assignedTasks %}
                        <li class="list-group-item">
                            <strong>Task Name:</strong> {{ task.name }}
                            - <strong>Project Name:</strong> {{ task.project ? task.project.name : 'No project assigned' }}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

            <!-- Back Button -->
            <div class="mt-4 text-center">
                <a href="{{ path('team_member_list') }}" class="btn btn-secondary btn-hover-effect">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <style>
        .card {
            margin: auto;
            border-radius: 0.75rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 700px;
        }

        .btn-hover-effect:hover {
            transform: scale(1.05);
            transition: all 0.3s ease;
        }

        h2 {
            color: #007bff;
            font-weight: bold;
        }

        h3 {
            color: #28a745;
            font-weight: bold;
        }

        /* Improved Task List Styling */
        .list-group-item {
            font-size: 1.1rem;
        }

        .list-group-item:hover {
            background-color: #f8f9fa;
        }

        /* Add some spacing to the last item */
        .list-group-item:last-child {
            margin-bottom: 0.5rem;
        }
    </style>
{% endblock %}
